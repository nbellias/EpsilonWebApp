@page "/customers"
@using EpsilonWebApp.Client.Services
@using EpsilonWebApp.Shared.Models
@using Microsoft.AspNetCore.Components.QuickGrid
@inject ICustomerServiceClient CustomerService
@attribute [Authorize]
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Πελάτες</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Πελάτες</h1>
    <button class="btn btn-primary" @onclick="CreateNewCustomer" title="Νέος Πελάτης">
        <i class="bi bi-plus-lg"></i>
    </button>
</div>

@if (totalCount == -1)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Φόρτωση...</span>
        </div>
        <p class="text-muted mt-2">Φόρτωση δεδομένων...</p>
    </div>
}

<div class="@(totalCount <= 0 ? "d-none" : "")">
    <div class="grid-container">
        <QuickGrid @ref="grid" ItemsProvider="@customerProvider" Pagination="@pagination" Class="table table-striped table-hover mt-3">
            <PropertyColumn Property="@(c => c.CompanyName)" Title="Επωνυμία Εταιρείας" Sortable="true" />
            <PropertyColumn Property="@(c => c.ContactName)" Title="Όνομα Επαφής" Sortable="true" />
            <PropertyColumn Property="@(c => c.City)" Title="Πόλη" Sortable="true" />
            <PropertyColumn Property="@(c => c.Country)" Title="Χώρα" Sortable="true" />
            <PropertyColumn Property="@(c => c.Phone)" Title="Τηλέφωνο" Sortable="true" />
            <TemplateColumn Title="" Class="text-center">
                <button class="btn btn-sm text-primary p-0 me-3 border-0 bg-transparent" @onclick="() => EditCustomer(context)" title="Επεξεργασία">
                    <i class="bi bi-pencil-square" style="font-size: 1.2rem;"></i>
                </button>
                <button class="btn btn-sm text-danger p-0 border-0 bg-transparent" @onclick="() => DeleteCustomer(context.Id)" title="Διαγραφή">
                    <i class="bi bi-trash3" style="font-size: 1.2rem;"></i>
                </button>
            </TemplateColumn>
        </QuickGrid>
    </div>

    <div class="d-flex justify-content-center mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(pagination.CurrentPageIndex == 0 ? "disabled" : "")">
                    <button class="page-link" @onclick="() => pagination.SetCurrentPageIndexAsync(0)" title="Πρώτη Σελίδα">
                        <i class="bi bi-chevron-double-left"></i>
                    </button>
                </li>
                <li class="page-item @(pagination.CurrentPageIndex == 0 ? "disabled" : "")">
                    <button class="page-link" @onclick="() => pagination.SetCurrentPageIndexAsync(pagination.CurrentPageIndex - 1)" title="Προηγούμενο">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </li>
                <li class="page-item active">
                    <span class="page-link">
                        Σελίδα @(pagination.CurrentPageIndex + 1) από @(totalCount > 0 ? (int)Math.Ceiling((double)totalCount / pagination.ItemsPerPage) : 1)
                    </span>
                </li>
                <li class="page-item @(pagination.CurrentPageIndex >= (totalCount > 0 ? (int)Math.Ceiling((double)totalCount / pagination.ItemsPerPage) - 1 : 0) ? "disabled" : "")">
                    <button class="page-link" @onclick="() => pagination.SetCurrentPageIndexAsync(pagination.CurrentPageIndex + 1)" title="Επόμενο">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </li>
                <li class="page-item @(pagination.CurrentPageIndex >= (totalCount > 0 ? (int)Math.Ceiling((double)totalCount / pagination.ItemsPerPage) - 1 : 0) ? "disabled" : "")">
                    <button class="page-link" @onclick="() => pagination.SetCurrentPageIndexAsync((totalCount > 0 ? (int)Math.Ceiling((double)totalCount / pagination.ItemsPerPage) - 1 : 0))" title="Τελευταία Σελίδα">
                        <i class="bi bi-chevron-double-right"></i>
                    </button>
                </li>
            </ul>
        </nav>
    </div>
</div>

@if (totalCount == 0)
{
    <div class="text-center p-5 border rounded bg-light mt-4">
        <i class="bi bi-people text-muted opacity-25" style="font-size: 4rem;"></i>
        <h3 class="text-muted mt-3">Δεν βρέθηκαν εγγραφές πελατών</h3>
        <p class="text-secondary mb-4">Η βάση δεδομένων σας είναι κενή.</p>
        <button class="btn btn-primary btn-lg" @onclick="CreateNewCustomer">
            <i class="bi bi-plus-lg me-2"></i>Προσθήκη πρώτου πελάτη
        </button>
    </div>
}

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingCustomer.Id == Guid.Empty ? "Νέος Πελάτης" : "Επεξεργασία Πελάτη")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="editingCustomer" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Επωνυμία Εταιρείας</label>
                            <InputText class="form-control" @bind-Value="editingCustomer.CompanyName" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Όνομα Επαφής</label>
                            <InputText class="form-control" @bind-Value="editingCustomer.ContactName" />
                        </div>
                        <div class="mb-3 position-relative">
                            <label class="form-label">Διεύθυνση</label>
                            <div class="input-group">
                                <input type="text" class="form-control" 
                                       value="@editingCustomer.Address" 
                                       @oninput="OnAddressInput" 
                                       placeholder="Ξεκινήστε να πληκτρολογείτε τη διεύθυνση..." />
                                @if (isSearchingAddress)
                                {
                                    <span class="input-group-text">
                                        <span class="spinner-border spinner-border-sm" role="status"></span>
                                    </span>
                                }
                            </div>
                            
                            @if (addressSuggestions.Any())
                            {
                                <div class="list-group position-absolute w-100 shadow-sm" style="z-index: 1050; max-height: 200px; overflow-y: auto;">
                                    @foreach (var suggestion in addressSuggestions)
                                    {
                                        <button type="button" class="list-group-item list-group-item-action text-start" 
                                                @onclick="() => SelectAddress(suggestion)">
                                            <small>@suggestion.Display_Name</small>
                                        </button>
                                    }
                                </div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Πόλη</label>
                                <InputText class="form-control" @bind-Value="editingCustomer.City" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Περιοχή</label>
                                <InputText class="form-control" @bind-Value="editingCustomer.Region" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ταχυδρομικός Κώδικας</label>
                                <InputText class="form-control" @bind-Value="editingCustomer.PostalCode" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Χώρα</label>
                                <InputText class="form-control" @bind-Value="editingCustomer.Country" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Τηλέφωνο</label>
                            <InputText class="form-control" @bind-Value="editingCustomer.Phone" />
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Ακύρωση</button>
                            <button type="submit" class="btn btn-primary">Αποθήκευση</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    /// <summary>State for the grid's pagination.</summary>
    private PaginationState pagination = new PaginationState { ItemsPerPage = 10 };
    /// <summary>Provider logic for fetching grid items from the server.</summary>
    private GridItemsProvider<Customer>? customerProvider;
    /// <summary>Whether the create/edit modal is currently shown.</summary>
    private bool showModal = false;
    /// <summary>Whether an address search is currently in progress.</summary>
    private bool isSearchingAddress = false;
    /// <summary>List of address suggestions from OpenStreetMap.</summary>
    private List<OsmSearchResult> addressSuggestions = new();
    /// <summary>Cancellation token for debouncing address search input.</summary>
    private System.Threading.CancellationTokenSource? debounceCts;
    /// <summary>The customer currently being created or edited.</summary>
    private Customer editingCustomer = new();
    /// <summary>Total number of customers found.</summary>
    private int totalCount = -1; // -1 indicates loading or not yet checked
    /// <summary>Reference to the QuickGrid component instance.</summary>
    private QuickGrid<Customer>? grid;

    /// <summary>
    /// Initializes the component and sets up the data provider for the grid.
    /// </summary>
    protected override void OnInitialized()
    {
        customerProvider = async request =>
        {
            var sortBy = request.SortByColumn?.Title switch
            {
                "Επωνυμία Εταιρείας" => "companyname",
                "Όνομα Επαφής" => "contactname",
                "Πόλη" => "city",
                "Χώρα" => "country",
                "Τηλέφωνο" => "phone",
                _ => "companyname"
            };

            var descending = request.SortByAscending ? false : true;
            
            // QuickGrid page index is 0-based, our API expects 1-based
            var page = (pagination.CurrentPageIndex) + 1;
            
            var result = await CustomerService.GetCustomersAsync(
                page, 
                pagination.ItemsPerPage, 
                sortBy, 
                descending);

            totalCount = result.TotalCount;
            StateHasChanged();

            return GridItemsProviderResult.From(
                items: result.Items,
                totalItemCount: result.TotalCount);
        };
    }

    /// <summary>
    /// Prepares the modal for creating a new customer.
    /// </summary>
    private void CreateNewCustomer()
    {
        editingCustomer = new Customer();
        addressSuggestions.Clear();
        showModal = true;
    }

    /// <summary>
    /// Prepares the modal for editing an existing customer.
    /// </summary>
    /// <param name="customer">The customer to edit.</param>
    private void EditCustomer(Customer customer)
    {
        editingCustomer = new Customer
        {
            Id = customer.Id,
            CompanyName = customer.CompanyName,
            ContactName = customer.ContactName,
            Address = customer.Address,
            City = customer.City,
            Region = customer.Region,
            PostalCode = customer.PostalCode,
            Country = customer.Country,
            Phone = customer.Phone
        };
        addressSuggestions.Clear();
        showModal = true;
    }

    /// <summary>
    /// Handles user input in the address field with debouncing and calls the search service.
    /// </summary>
    /// <param name="e">The input event arguments.</param>
    private async Task OnAddressInput(ChangeEventArgs e)
    {
        var val = e.Value?.ToString();
        editingCustomer.Address = val;

        if (string.IsNullOrWhiteSpace(val) || val.Length < 3)
        {
            addressSuggestions.Clear();
            return;
        }

        // Debounce logic
        debounceCts?.Cancel();
        debounceCts = new System.Threading.CancellationTokenSource();
        var token = debounceCts.Token;

        try
        {
            await Task.Delay(500, token); // Wait for 500ms
            isSearchingAddress = true;
            StateHasChanged();

            addressSuggestions = await CustomerService.SearchAddressAsync(val);
        }
        catch (TaskCanceledException)
        {
            // Ignore
        }
        finally
        {
            isSearchingAddress = false;
            StateHasChanged();
        }
    }

    /// <summary>
    /// Updates the customer model with details from the selected address suggestion.
    /// </summary>
    /// <param name="suggestion">The selected address suggestion.</param>
    private void SelectAddress(OsmSearchResult suggestion)
    {
        // Populate Address
        var addr = suggestion.Address;
        var street = !string.IsNullOrEmpty(addr.Road) ? addr.Road : "";
        var number = !string.IsNullOrEmpty(addr.House_Number) ? $" {addr.House_Number}" : "";
        
        editingCustomer.Address = $"{street}{number}".Trim();
        
        // Populate City (OSM uses road/town/village/city)
        editingCustomer.City = addr.City ?? addr.Town ?? addr.Village ?? addr.Suburb ?? "";
        
        // Populate Region/State
        editingCustomer.Region = addr.State ?? "";
        
        // Populate Zip
        editingCustomer.PostalCode = addr.Postcode ?? "";
        
        // Populate Country
        editingCustomer.Country = addr.Country ?? "";

        addressSuggestions.Clear();
    }

    /// <summary>
    /// Deletes a customer and refreshes the grid.
    /// </summary>
    /// <param name="id">The unique identifier of the customer to delete.</param>
    private async Task DeleteCustomer(Guid id)
    {
        await CustomerService.DeleteCustomerAsync(id);
        if (grid != null) await grid.RefreshDataAsync();
    }

    /// <summary>Closes the customer modal.</summary>
    private void CloseModal() => showModal = false;

    /// <summary>
    /// Submits the customer form (create or update) and refreshes the grid.
    /// </summary>
    private async Task HandleSubmit()
    {
        await CustomerService.SaveCustomerAsync(editingCustomer);
        showModal = false;
        if (grid != null) await grid.RefreshDataAsync();
    }
}
